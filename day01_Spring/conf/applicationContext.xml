<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

   <!-- 
   		bean defines an object
   		id : ID of the object, non-replicable, optional if get bean by class
   		class: the class path for the object
   		property: field 
    -->
   <bean id = "person1" class = "com.atguigu.spring.mod.Person" scope = "prototype">
   		<property name = "id" value = "1111" ></property>
   		<property name = "name" value = "abc" ></property>
   </bean>
   
   <bean id = "person2" class = "com.atguigu.spring.mod.Person" scope = "singleton">
   		<property name = "id" value = "1111" ></property>
   		<property name = "name" value = "abc" ></property>
   </bean>
   
</beans>